{
  "name": "@ocavue/utils",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.23.0",
  "description": "A collection of utility functions for the browser and other environments",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/utils#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/utils.git"
  },
  "bugs": "https://github.com/ocavue/utils/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "fix": "eslint --fix . && prettier --write .",
    "ci:publish:snapshot": "pkg-pr-new publish --pnpm",
    "prepublishOnly": "pnpm run build",
    "test": "vitest",
    "typecheck": "tsc -b"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.6.2",
    "@ocavue/tsconfig": "^0.6.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "4.0.13",
    "eslint": "^9.38.0",
    "jsdom": "^27.2.0",
    "pkg-pr-new": "^0.0.60",
    "prettier": "^3.6.2",
    "size-limit": "^11.2.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "renovate": {
    "extends": [
      "github>ocavue/config-renovate"
    ]
  },
  "size-limit": [
    {
      "path": "dist/index.js"
    }
  ]
}
